{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white py-10 px-4 sm:px-6 lg:px-8 max-w-3xl mx-auto">

        <h2 class="text-2xl font-bold text-[#f4c400] mb-6 text-center">Liste des catégories</h2>

        <ul class="mb-8 border border-[#f4c400] rounded-lg bg-[#fffdd3] shadow divide-y divide-yellow-300">
            {% for category in category %}
                <li class="px-6 py-3 text-gray-800 font-medium hover:bg-[#fffab8] transition duration-300">
                    {{ category.id }} : {{ category.name }}
                </li>
            {% else %}
                <li class="px-6 py-3 text-gray-600 text-center">Aucune catégorie trouvée.</li>
            {% endfor %}
        </ul>

        {{ form_start(formCat, {'attr': {'class': 'max-w-sm mx-auto'}}) }}
        <div class="mb-6">
            {{ form_row(formCat.name, {'attr': {'class': 'w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400'}}) }}
        </div>

        <button type="submit"
                class="w-full px-6 py-3 bg-[#f4c400] text-black font-semibold rounded shadow hover:bg-yellow-400 transition duration-200">
            Envoyer
        </button>
        {{ form_end(formCat) }}

    </div>
{% endblock %}
