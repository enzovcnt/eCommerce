{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de la commande #{{ order.id }}</h1>

    <p><strong>Client :</strong> {{ order.customer.name }}</p>
    <p><strong>Total :</strong> {{ order.total }} €</p>
    <p><strong>Statut :</strong>
        {% if order.status == 1 %}
            <span style="color:orange;">En attente</span>
        {% elseif order.status == 2 %}
            <span style="color:green;">Validée</span>
        {% elseif order.status == 3 %}
            <span style="color:blue;">Expédiée</span>
        {% endif %}
    </p>

    <h3>Changer le statut</h3>
    <form method="get" action="{{ path('app_employee_status', {id: order.id, status: 2}) }}">
        <button type="submit">Passer en Validée</button>
    </form>

    <form method="get" action="{{ path('app_employee_status', {id: order.id, status: 3}) }}">
        <button type="submit">Passer en Expédiée</button>
    </form>

    <a href="{{ path('app_employee') }}">← Retour à la liste</a>
{% endblock %}
