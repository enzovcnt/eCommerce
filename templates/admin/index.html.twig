{% extends 'base.html.twig' %}

{% block title %}Commandes Admin{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white py-10 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">

        <h1 class="text-3xl font-bold text-[#f4c400] mb-8 text-center">Liste des commandes</h1>

        <div class="space-y-6">
            {% for order in orders %}
                <div class="p-6 bg-[#fffdd3] border border-[#f4c400] rounded-lg shadow hover:bg-[#fffab8] transition duration-300">
                    <p class="text-gray-800 font-semibold mb-4">
                        <span class="mr-2">ID : {{ order.id }}</span> |
                        <span class="ml-2">Total : {{ order.total }} €</span>
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-700">
                        <div>
                            <h3 class="font-semibold mb-1">Adresse de facturation :</h3>
                            <p>{{ order.billingAddress.street }}</p>
                            <p>{{ order.billingAddress.city }}, {{ order.billingAddress.zipCode }}</p>
                            <p>{{ order.billingAddress.country }}</p>
                        </div>
                        <div>
                            <h3 class="font-semibold mb-1">Adresse de livraison :</h3>
                            <p>{{ order.shippingAddress.street }}</p>
                            <p>{{ order.shippingAddress.city }}, {{ order.shippingAddress.zipCode }}</p>
                            <p>{{ order.shippingAddress.country }}</p>
                        </div>
                    </div>

                    {% if order.status == 1 %}
                        <p class="mt-4 font-semibold text-yellow-600">Status: en cours</p>
                    {% endif %}
                </div>
            {% else %}
                <p class="text-center text-gray-600">Aucune commande trouvée.</p>
            {% endfor %}
        </div>

    </div>
{% endblock %}
