{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white flex items-center justify-center py-12 px-4">
        <div class="bg-lime-200 p-8 rounded-xl shadow-md w-full max-w-lg">
            <h2 class="text-2xl font-semibold text-center font-serif mb-6">Créer un compte</h2>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            <div class="space-y-4">
                {{ form_row(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 rounded border border-gray-300', 'placeholder': 'Adresse e-mail'}}) }}
                {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'w-full px-4 py-2 rounded border border-gray-300', 'placeholder': 'Mot de passe'}}) }}
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="w-full mt-6 bg-yellow-400 hover:bg-yellow-500 text-black py-2 rounded-md font-semibold">
                Créer un compte
            </button>
            {{ form_end(registrationForm) }}

            <p class="text-center mt-6 text-sm">Déjà inscrit ?
                <a href="{{ path('app_login') }}" class="text-blue-600 underline">Se connecter</a>
            </p>

        </div>
    </div>


{% endblock %}
