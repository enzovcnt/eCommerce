{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-white py-10 px-4 sm:px-6 lg:px-8">

        <h2 class="text-center text-2xl font-bold text-[#c9da2c] mb-8">
            Choisissez une adresse de facturation
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for address in app.user.profile.address %}
                <a href="{{ path('app_order_shippingAddress', {id: address.id}) }}"
                   class="block p-6 rounded-lg shadow-md border border-[#c9da2c] bg-[#faffd8] hover:bg-[#fffcb0] transition-all duration-300">
                    <p class="text-lg font-semibold text-gray-700 mb-2">
                        {{ address.number }} {{ address.street }}
                    </p>
                    <p class="text-sm text-gray-600">{{ address.zipCode }} {{ address.city }}</p>
                    <p class="text-sm text-gray-600">{{ address.country }}</p>
                </a>
            {% else %}
                <p class="text-gray-600">Aucune adresse enregistrÃ©e.</p>
            {% endfor %}
        </div>

    </div>
{% endblock %}
