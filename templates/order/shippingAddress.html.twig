{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-white py-10 px-4 sm:px-6 lg:px-8">

        <h2 class="text-center text-2xl font-bold text-[#f4c400] mb-8">
            Choisissez une adresse de livraison
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for address in app.user.profile.address %}
                <a href="{{ path('app_order_payment', {idBilling: billingAddress.id, idShipping: address.id}) }}"
                   class="block p-6 rounded-lg shadow-md border border-[#f4c400] bg-[#fffdd3] hover:bg-[#fffab8] transition-all duration-300">
                    <p class="text-lg font-semibold text-gray-700 mb-2">
                        {{ address.number }} {{ address.street }}
                    </p>
                    <p class="text-sm text-gray-600">{{ address.zipCode }} {{ address.city }}</p>
                    <p class="text-sm text-gray-600">{{ address.country }}</p>
                </a>
            {% else %}
                <p class="text-gray-600">Aucune adresse enregistrÃ©e.</p>
            {% endfor %}
        </div>

        <div class="text-center mt-8">
            <a href="{{ path('app_address') }}"
               class="inline-block px-5 py-2 bg-[#f4c400] text-black font-semibold rounded shadow hover:bg-yellow-400 transition-all duration-200">
                Ajouter une adresse de livraison
            </a>
        </div>

    </div>
{% endblock %}
