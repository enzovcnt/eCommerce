{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-white py-10 px-4 sm:px-6 lg:px-8 max-w-3xl mx-auto">

        <h2 class="text-2xl font-bold text-[#f4c400] mb-6 text-center">
            Noter ce commentaire
        </h2>

        <p class="mb-8 text-gray-700 border border-[#f4c400] rounded-lg bg-[#fffdd3] p-6 shadow">
            {{ comment.content }}
        </p>

        {{ form_start(form, {'attr': {'class': 'max-w-sm mx-auto'}}) }}
        <div class="mb-6">
            {{ form_row(form.rate, {'attr': {'class': 'w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400'}}) }}
        </div>

        <button type="submit"
                class="w-full px-6 py-3 bg-[#f4c400] text-black font-semibold rounded shadow hover:bg-yellow-400 transition duration-200">
            Noter
        </button>
        {{ form_end(form) }}

    </div>
{% endblock %}
